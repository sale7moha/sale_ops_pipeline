<odoo>
    <record id="product_template_form_ops_fields" model="ir.ui.view">
        <field name="name">product.template.form.ops.fields</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='purchase']" position="inside">
                <group string="Sales Operations">
                    <field name="manufacturing_vendor_id"/>
                    <field name="shipping_cost_outside_riyadh"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
