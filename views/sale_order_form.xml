<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- =========================================================
         Sale Order Form â€“ Operations Enhancements
         - Operational Stage statusbar (top of form)
         - Manufacturing & Shipping PO stat buttons
    ========================================================== -->

    <record id="sale_order_form_ops_enhanced" model="ir.ui.view">
        <field name="name">sale.order.form.ops.enhanced</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="priority">20</field>
        <field name="arch" type="xml">

            <!-- =================================================
                 1) Operational Stage Bar (ABOVE the form)
            ================================================== -->
            <xpath expr="//sheet" position="before">
                <div class="o_form_statusbar mb-2 text-center">

                    <field name="ops_stage_id"
                           widget="statusbar"
                           options="{'clickable': true}"
                           class="o_statusbar_status"/>

                </div>
            </xpath>

            <!-- =================================================
                 2) Sales Operations Stat Buttons
            ================================================== -->
            <xpath expr="//div[@name='button_box']" position="inside">

                <!-- Manufacturing Purchase Orders -->
                <button name="action_view_manufacturing_pos"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-industry">
                    <field name="manufacturing_po_count"
                           widget="statinfo"
                           string="Manufacturing POs"/>
                </button>

                <!-- Shipping Purchase Orders -->
                <button name="action_view_shipping_pos"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-truck">
                    <field name="shipping_po_count"
                           widget="statinfo"
                           string="Shipping POs"/>
                </button>

            </xpath>

        </field>
    </record>

</odoo>
