<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- ===========================
         Tree (List) View
    ============================ -->
    <record id="view_ops_shipping_carrier_tree" model="ir.ui.view">
        <field name="name">ops.shipping.carrier.tree</field>
        <field name="model">ops.shipping.carrier</field>
        <field name="arch" type="xml">
            <list>
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="is_internal"/>
                <field name="vendor_id"/>
                <field name="service_product_id"/>
                <field name="cost_riyadh_flat"/>
                <field name="ship_days_riyadh"/>
                <field name="ship_days_outside"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <!-- ===========================
         Form View
    ============================ -->
    <record id="view_ops_shipping_carrier_form" model="ir.ui.view">
        <field name="name">ops.shipping.carrier.form</field>
        <field name="model">ops.shipping.carrier</field>
        <field name="arch" type="xml">
            <form string="إعدادات شركة الشحن">
                <sheet>

                    <!-- Title -->
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name"
                                   placeholder="مثال: سمسا / أرامكس / سائق الشركة"/>
                        </h1>
                    </div>

                    <!-- Basic Info -->
                    <group>
                        <group>
                            <field name="active"/>
                            <field name="sequence"/>
                            <field name="is_internal"/>
                        </group>
                        <group>
                            <field name="vendor_id"/>
                            <field name="service_product_id"/>
                        </group>
                    </group>

                    <!-- Tabs -->
                    <notebook>

                        <page string="المدد الزمنية">
                            <group>
                                <group>
                                    <field name="ship_days_riyadh"/>
                                </group>
                                <group>
                                    <field name="ship_days_outside"/>
                                </group>
                            </group>
                        </page>

                        <page string="التكاليف">
                            <group>
                                <group>
                                    <field name="cost_riyadh_flat"/>
                                    <div class="oe_grey">
                                        داخل الرياض: تكلفة ثابتة للطلب كامل عند استخدام شركة شحن خارجية.
                                    </div>
                                </group>

                                <group>
                                    <field name="note_outside"
                                           nolabel="1"
                                           readonly="1"/>
                                    <div class="oe_grey">
                                        خارج الرياض: يتم احتساب تكلفة الشحن من كرت المنتج
                                        (تكلفة الوحدة × الكمية) ثم تُجمع كسطر واحد في PO.
                                    </div>
                                </group>
                            </group>
                        </page>

                    </notebook>

                </sheet>
            </form>
        </field>
    </record>

    <!-- ===========================
         Action
    ============================ -->
    <record id="action_ops_shipping_carrier" model="ir.actions.act_window">
        <field name="name">شركات الشحن</field>
        <field name="res_model">ops.shipping.carrier</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                أضف شركات الشحن هنا
            </p>
            <p>
                يمكنك تعريف شركة شحن خارجية (مع المورد ومنتج الخدمة)،
                أو تعريف "سائق الشركة" كتوصيل داخلي بدون إنشاء طلب شراء شحن.
            </p>
        </field>
    </record>

    <!-- ===========================
         Menus
    ============================ -->

    <!-- Configuration root -->
    <menuitem id="menu_sale_ops_config_root"
              name="الإعدادات"
              parent="menu_sale_ops_root"
              sequence="50"/>

    <!-- Shipping Carriers -->
    <menuitem id="menu_sale_ops_shipping_carriers"
              name="شركات الشحن"
              parent="menu_sale_ops_config_root"
              action="action_ops_shipping_carrier"
              sequence="10"/>

</odoo>
